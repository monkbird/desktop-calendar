{
  "name": "desktop-calendar",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite --port 30122",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "electron:build": "npm run build && electron-builder --win nsis"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.17",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.17",
    "typescript": "~5.9.3",
    "vite": "npm:rolldown-vite@7.2.5",
    "electron": "^31.7.7",
    "electron-builder": "^24.13.3"
  },
  "overrides": {
    "vite": "npm:rolldown-vite@7.2.5"
  },
  "dependencies": {
    "classnames": "^2.5.1",
    "lucide-react": "^0.555.0",
    "lunar-typescript": "^1.8.6",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "auto-launch": "^5.0.5"
  },
  "build": {
    "appId": "com.monkbird.desktopcalendar",
    "productName": "Desktop Calendar",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "win": {
      "target": ["nsis"]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
